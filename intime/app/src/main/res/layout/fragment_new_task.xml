<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.vpe_soft.intime.intime.NewTaskFragment"

    android:columnCount="2"
    android:rowCount="4"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_column="0"
        android:layout_row="0"
        />
    <EditText android:layout_column="1"
        android:text="abc"
        android:layout_row="0"
        android:layout_columnWeight="5.0"
        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_column="0"
        android:layout_row="1"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_column="0"
        android:layout_row="2"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_row="2"
        android:layout_column="1" />

    <Button  android:text="Create" android:layout_column="0" android:layout_row="3" android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        />

</GridLayout>
